<resources>
    <style name="LinerLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="ListViewText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="ListViewIcon">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="ResultsListView" parent="android:Widget.ListView" >
        <item name="android:listSelector">@drawable/selector_list_view</item>
        <item name="android:cacheColorHint">@color/transparent</item>
    </style>

</resources>